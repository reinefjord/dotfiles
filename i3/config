exec --no-startup-id setxkbmap -layout us -variant altgr-intl -option compose:menu
exec --no-startup-id xrandr --output eDP-1 --brightness .9
exec --no-startup-id xss-lock -n ~/bin/lock-screen-wait -- ~/bin/lock-screen &
